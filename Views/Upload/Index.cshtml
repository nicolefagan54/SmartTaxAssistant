@model IEnumerable<SmartTaxAssistant.Web.Models.QuestionnaireQuestion>

@{
    ViewData["Title"] = "Start New Return";
    var personalQuestions = Model.Where(q => q.ReturnType == "Personal");
    var corpQuestions = Model.Where(q => q.ReturnType == "Corporate");
}

<h2>Start New Tax Return</h2>
<p class="text-muted">Upload your document and answer a few questions to get started.</p>

<form enctype="multipart/form-data" method="post">
    <!-- Return Type and File Upload -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">1. Return Details</div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Return Type</label>
                        <select name="returnType" id="returnTypeSelect" class="form-control" onchange="toggleQuestions()">
                            <option value="Personal">Personal (T1)</option>
                            <option value="Corporate">Corporate (T2)</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Tax Year</label>
                        <input type="number" name="taxYear" class="form-control" value="@DateTime.Now.Year" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Select PDF Document</label>
                        <input type="file" name="pdf" class="form-control" required />
                    </div>
                </div>
            </div>
        </div>

        <!-- Questionnaire Section -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-secondary text-white">2. Questionnaire</div>
                <div class="card-body">
                    
                    <!-- Personal Questions -->
                    <div id="personalQuestions">
                        <h5 class="text-primary border-bottom pb-2">Personal Questions</h5>
                        @foreach (var q in personalQuestions)
                        {
                            <div class="form-group mb-2">
                                <label class="small">@q.Text</label>
                                <input type="text" name="answers[@q.QuestionnaireQuestionId]" class="form-control form-control-sm" placeholder="Yes/No" />
                            </div>
                        }
                    </div>

                    <!-- Corporate Questions -->
                    <div id="corpQuestions" style="display:none;">
                        <h5 class="text-success border-bottom pb-2">Corporate Questions</h5>
                        @foreach (var q in corpQuestions)
                        {
                            <div class="form-group mb-2">
                                <label class="small">@q.Text</label>
                                <input type="text" name="answers[@q.QuestionnaireQuestionId]" class="form-control form-control-sm" placeholder="Yes/No" />
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success btn-lg">Submit Return</button>
    </div>
</form>

<script>
    function toggleQuestions() {
        var type = document.getElementById("returnTypeSelect").value;
        if (type === "Personal") {
            document.getElementById("personalQuestions").style.display = "block";
            document.getElementById("corpQuestions").style.display = "none";
        } else {
            document.getElementById("personalQuestions").style.display = "none";
            document.getElementById("corpQuestions").style.display = "block";
        }
    }
</script>
